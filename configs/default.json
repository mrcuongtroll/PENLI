{
  "name": "default-prompt-CLED",
  "n_gpu": 1,
  "save_dir": "./logs/",
  "num_epochs": 10,
  "num_prints": 5,
  "freeze_bert": true,
  "grad_clip": 1.0,
  "model": {
    "type": "PromptCLED",
    "kwargs": {
      "pretrained": "bert-base-multilingual-cased",
      "num_labels": 33,
      "language_set": ["en", "hi", "ja", "ko", "pl", "pt", "es", "tr"],
      "spec_prompt_size": 10,
      "gen_prompt_size": 10
    }
  },
  "train_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "languages":  ["english", "hindi", "japanese", "korean", "polish", "portuguese", "spanish", "turkisk"],
      "dataset_type": "train",
      "max_seq_length": 512,
      "prompt_reserve_size": 20,
      "ignore_o": false,
      "trigger_sampling_weight": 5.0,
      "batch_size": 16,
      "shuffle": false
    }
  },
  "valid_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "file_path": "./datasets/MINION/polish/dev.json",
      "max_seq_length": 512,
      "prompt_reserve_size": 20,
      "ignore_o": false,
      "batch_size": 16,
      "shuffle": true
    }
  },
  "test_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "file_path": "./datasets/MINION/english/test.json",
      "max_seq_length": 512,
      "prompt_reserve_size": 20,
      "ignore_o": false,
      "batch_size": 16,
      "shuffle": true
    }
  },
  "loss": {
    "type": "NLLLoss",
    "kwargs": {}
  },
  "optimizer": {
    "type": "Adam",
    "kwargs": {
      "lr": 1e-3
    }
  },
  "logging": {
    "type": "setup_logging",
    "kwargs": {
      "save_dir": "./logs/",
      "log_config": "./logger/logging_config.json"
    }
  }
}
