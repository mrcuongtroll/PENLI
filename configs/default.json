{
  "name": "default",
  "n_gpu": 1,
  "save_dir": "./logs/",
  "num_epochs": 5,
  "num_prints": 10,
  "freeze_bert": false,
  "grad_clip": 1.0,
  "model": {
    "type": "BertPENLI",
    "kwargs": {
      "pretrained": "bert-base-uncased"
    }
  },
  "train_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "file_path": "./datasets/e-SNLI/esnli_train_1.csv",
      "max_seq_length": 512,
      "batch_size": 16,
      "shuffle": true
    }
  },
  "valid_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "file_path": "./datasets/e-SNLI/esnli_dev.csv",
      "max_seq_length": 512,
      "batch_size": 16,
      "shuffle": false
    }
  },
  "test_loader": {
    "type": "token_classification_data_loader",
    "kwargs": {
      "file_path": "./datasets/e-SNLI/esnli_test.csv",
      "max_seq_length": 512,
      "batch_size": 16,
      "shuffle": false
    }
  },
  "loss": {
    "type": "NLLLoss",
    "kwargs": {}
  },
  "optimizer": {
    "type": "AdamW",
    "kwargs": {
      "lr": 1e-5
    }
  },
  "logging": {
    "type": "setup_logging",
    "kwargs": {
      "save_dir": "./logs/",
      "log_config": "./logger/logging_config.json"
    }
  }
}
